<h1>New user</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>
  <fieldset>
    <legend>Enter User Details</legend>
    <p>
      <%= f.label :username %><br />
      <%= f.text_field :username %>
    </p>
    <p>
      <%= f.label :password %><br />
      <%= f.password_field :password %>
    </p>
    <p>
      <%= f.label :password_confirmation, 'Confirm: ' %><br />
      <%= f.password_field :password_confirmation %>
    </p>
   <%= f.submit 'Create' %>
  </fieldset>
<% end %>

<%= link_to 'Back to all users', users_path if @currentUser %>